/* pages/details/details.wxss */
@import "../pub_top/pub_top.wxss";
.detail image{
  width: 100%;
}
.detail_text{
  width: 94%;
  padding: 20rpx 3%;
  border-top: 20rpx solid #f1f1f1;
  border-bottom: 20rpx solid #f1f1f1;
}
.detail_text text.title{
  display: block;
  color: #333;
  font-size: 28rpx;
  line-height: 150%;
}
.detail_text text.text{
  font-size: 24rpx;
  color: #999;
  display: block;
  line-height: 150%;
}
.jiege{
  height: 55rpx;
  line-height: 55rpx;
}
.jiege text,.jiage_box text{
  display: block;
  float: left
}
.jiege text.small,.jiage_box text.small{
  color: #df0c1d;
  font-size: 28rpx;
  line-height: 65rpx;
}
.jiege text.yuan,.jiage_box text.yuan{
  color: #df0c1d;
  font-size: 40rpx;
}
.jiege text.jiao,.jiage_box text.jiao{
  color: #df0c1d;
  font-size: 24rpx;
  line-height: 65rpx;
}
.jiege text.del{
  font-size: 24rpx;
  color: #666;
  line-height: 65rpx;
  margin-left: 15rpx;
  text-decoration: line-through;
}
.jiege text.kucun{
  float: right;
  color: #666;
  font-size: 24rpx;
  padding-left: 20rpx;
}
.jiege text.xiao{
  float: right;
  color: #666;
  font-size: 24rpx;
}
.switch{
  width: 94%;
  padding: 0 3% 40rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center
}
.switch navigator{
  width: 50%;
  height: 90rpx;
  line-height: 90rpx;
  float: left;
  color: #666;
  font-size: 28rpx;
}
.switch navigator.active{
  color: #df0b1b
}
.img_box{
  padding: 0 3% 140rpx;  
}
.img_box image{
  width: 100%;
}
.fix_bot{
  height: 100rpx;
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  border-top: 1rpx solid #df0c1d;
  z-index: 9;
  background: #fff
}
.jia{
  padding-left: 30rpx;
  width:37%;
  float:left;

}
.jiage_box{
  display: block;
  line-height: 65rpx;
  height: 65rpx;
}
.jiesheng{
  display: block;
  height: 35rpx;
  line-height: 35rpx;
  color: #999;
  font-size: 24rpx;
}
.fix_bot navigator{
  width: 220rpx;
  height: 100rpx;
  background: #df0c1d;
  color: #fff;
  font-size: 32rpx;
  /* position:relative;
  right: 0;
  top: 0; */
  text-align: center;
  line-height: 100rpx;
  display: block;
  float:left;
}
.cart{ width: 220rpx; height: 100rpx;display: block; float: right; background: #df0c1d;
  color: #fff;
  font-size: 32rpx; border: none;}

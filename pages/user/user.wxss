/* pages/user/user.wxss */
@import "../pub_top/pub_top.wxss";
@import "../footer/footer.wxss";
.user_top{
  width: 100%;
  padding: 43rpx 0;
  height: 168rpx;
  position: relative;
}
.top_img{
  width: 100%;
  height: 254rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1
}
.tx{
  width: 158rpx;
  height: 158rpx;
  position: absolute;
  left: 3%;
  top: 43rpx;
  z-index: 2;
  border-radius: 168rpx;
  overflow: hidden;
  border: 5rpx solid #fff;
}
.tx image{
  width: 100%;
  height: 100%;
}
.nicheng{
  padding-left: 250rpx;
  padding-top: 43rpx;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  z-index: 3
}
.title{
  display: block;
  font-size: 24rpx;
  line-height: 150%;
  color: #fff;
  left: 250rpx;
  top: 60rpx;
}
.text{
  display: block;
  position: absolute;
  color: #fff;
  font-size: 24rpx;
  left: 250rpx;
  bottom: 60rpx;
  line-height: 150%;
}
.jifen{
  color: #fff;
  position: absolute;
  font-size: 24rpx;
  left: 400rpx;
  bottom: 60rpx;
  line-height: 150%;
}
.muen{
  width: 100%;
  height: 100rpx;
  display: flex;
  background: #ed0c61;
}
.muen navigator{
  flex: 1;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  line-height: 100rpx;
}
.muen navigator:nth-child(2){
  border-left: 5rpx solid #fff;
  border-right: 5rpx solid #fff;
}
.muen_box{
  width: 100%;
  height: 95rpx;
  padding: 40rpx 0 25rpx;
  border-bottom: 2rpx solid #f2f2f2;
  display: flex;
}
.nav_muen{
  flex: 1;
  line-height: 45rpx;
  color: #333;
  font-size: 24rpx;
  text-align: center;
  position: relative;
}
.nav_muen image{
  display: block;
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto;
}
.nav_muen .icon{
  display: block;
  width: 30rpx;
  height: 30rpx;
  border-radius: 30rpx;
  background: #ed0c61;
  text-align: center;
  line-height: 30rpx;
  color: #fff;
  font-size: 24rpx;
  position: absolute;
  top: -7rpx;
  left: 50%;
  margin-left: 10rpx;
}
.li{
  overflow: hidden;
  height: 54rpx;
  line-height: 54rpx;
  padding: 19rpx 0;
  border-bottom: 2rpx solid #ececec;
  font-size: 24rpx;
  color: #4d5466;
}
.li image{
  width: 54rpx;
  height: 54rpx;
  display: block;
  float: left;
  margin: 0 19rpx;
}
.list{
  overflow: hidden;
  padding-bottom: 30rpx;
  margin-bottom:100rpx;
}
.xysd{
  width: 100%;
  text-align: center;
  padding: 25rpx 0 120rpx;
  background: #ededed;
}
.xysd image{
  display: block;
  width: 131rpx;
  height: 33rpx;
  margin: 0 auto;
}
.xysd text{
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #888282;
  height: 50rpx;
  line-height: 50rpx;
}

.li-notice{
  position: relative;
}
.notice-num{
  min-width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: red;
  color: #fff;
  font-weight: 600;
  display: inline-block;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translate(0, -50%);
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 5rpx;
  box-sizing: border-box;
}